!!!
%html
  %head
    %title smugsaints
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body{:class => controller_name}

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.brand{:href => "/", :class => 'right'}
            The Smug Saints
          %ul.nav
            %li
              %a{:href => "/"} Home
            %li.divider-vertical
            %li
              %a{:href => "/shows"} Shows       
            - if user_signed_in?
              %li.divider-vertical
              %li
                %p.navbar-text
                  Ahoy, #{current_user.email}!
                  = link_to "Sign out", destroy_user_session_path, :method => :delete
            - else
              %li.divider-vertical
              %li
              \#{link_to "Sign in", new_user_session_path, :class => 'signIn'}
    .container
      = yield
